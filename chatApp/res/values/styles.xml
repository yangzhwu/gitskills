<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 头像80 -->
    <style name="avatar_80" >
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/default_avatar</item>
    </style>
    
    <!-- 灰色横线 -->
    <style name="horizon_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:src">@color/divider_color</item>
    </style>
    
    <!-- 灰色竖线 -->
    <style name="vertical_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>    
        <item name="android:src">@color/grey</item>
    </style>
    
    <!-- 绿色圆角按钮 -->
    <style name="round_green_button_style">
        <item name="android:background">@drawable/round_green_button</item>
    </style>
    
    <!-- 所有dialog样式 -->
    <style name="my_dialog">  
        <item name="android:windowFrame">@null</item>	<!-- 边框 -->  
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->  
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->  
        <item name="android:windowBackground">@color/dialog_bg</item><!-- 自己想要的背景 -->  
        <item name="android:windowNoTitle">true</item>  <!-- 除去title -->  
    </style> 

</resources>
