<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 头像80 -->
    <style name="avatar_80" >
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="android:background">@drawable/round</item>
    </style>
    
    <!-- 灰色横线 -->
    <style name="horizon_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:src">@color/grey</item>
    </style>
    
    <!-- 灰色竖线 -->
    <style name="vertical_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>    
        <item name="android:src">@color/grey</item>
    </style>
    
    <!-- 绿色圆角按钮 -->
    <style name="round_green_button_style">
        <item name="android:background">@drawable/round_green_button</item>
    </style>

</resources>
